<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/apptheme_primary</item>
        <item name="colorPrimaryDark">@color/apptheme_primary_dark</item>
        <item name="colorAccent">@color/apptheme_accent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/apptheme_window_background</item>
        <item name="android:textColor">@color/apptheme_text_primary</item>
        <item name="android:textColorPrimary">@color/apptheme_text_primary</item>
        <item name="android:textColorSecondary">@color/apptheme_text_primary</item>
        <item name="android:textColorLink">?colorPrimary</item>
    </style>

    <style name="DaySwitchButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/selector_light_oval</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>
